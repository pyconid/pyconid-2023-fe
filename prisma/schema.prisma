// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())

  email    String @unique
  name     String
  username String @unique
}

model Speaker {
  id String @id @default(cuid())

  name String
  slug String  @unique
  bio  String?
}
